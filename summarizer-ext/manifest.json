{
    "manifest_version": 3,   
    "name": "Summarizer AI",
    "version": "1.0",
    "description": "Summarize text with AI",
    "permissions" : [
        "activeTab",
        "storage",
        "sidePanel",
        "scripting"
    ],
    "action":{
        "default_title": "Summarizer AI"
    },
    "side_panel":{
        "default_path":"sidepanel.html"
    },
    "background":{
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://localhost:8080/*",
        "<all_urls>"
    ],
    "content_security_policy":{
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}